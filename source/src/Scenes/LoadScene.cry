class LoadScene {
	
	field next;
	field counter = 0;
	
	constructor(self) {
		this.next = this;
	}
	
	function ProcessInput(events) { }
	
	function Render(screen) {
		images.Get('load_splash.png').blit(0, 0);
	}
	
	function Update() {
		this.counter++;
		
		if (this.counter > 60) {
			this.next = new TransitionScene(this, new TitleScene(), 'fadeout', 30);
		}
	}
}
